// Variables


// Keyframes for card floating animation
@keyframes floatcard
  0%
    transform: translate(0px, 0px)
  25%
    transform: translate(-10px, -10px)
  50%
    transform: translate(10px, 10px)
  75%
    transform: translate(-10px, 10px)
  100%
    transform: translate(0px, 0px)

// Base page styles
body[body-type='about']
  #content-inner
    display: flex
    flex-direction: column
    align-items: stretch

  #page
    border: none
    margin: 0
    padding: 0
    background: none
    box-shadow: none
    width: 100%
    height: 100%
    backdrop-filter: none
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    flex: 1

  #page .page-title
    display: none

  .layout
    margin: 0
    padding: 0

  .layout.hide-aside
    max-width: none
    max-height: none

// Card styles
.card
  padding-top: 0
  padding-bottom: 0
  padding-left: 20px
  padding-right: 20px
  text-align: center
  font-size: 1.2rem
  line-height: 1.5
  margin: 20px
  transition: all 0.1s ease-in-out
  background: var(--trans-light)
  backdrop-filter: var(--backdrop-filter)
  border-radius: 25px
  border: var(--border-style)
  animation: floatcard 10s infinite ease-in-out

  &:hover
    box-shadow: 0 1px 2px rgba(0,0,0,1)

  [data-theme="dark"] &
    background: var(--trans-dark)

.card.left1, .card.left3
  margin-left: 40px
  margin-right: 0px

.card.right1, .card.right3
  margin-left: 0px
  margin-right: 40px
// Additional page layout adjustments
#about-page
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  height: auto
  width: 100%

.about-top
  display: flex
  align-items: center
  justify-content: center

.left-container, .right-container
  display: flex
  flex-direction: column
  justify-content: flex-start
  max-width: 30%
  min-width: 20%

.avatar
  width: 30%
  height: auto
  border-radius: 50%

.description.card
  width: 50%
  height: auto
  animation: none
